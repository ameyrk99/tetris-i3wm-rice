[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.cyan}
;label-mode-background = ${colors.background}

label-focused = "%name%"
label-focused-background = ${colors.cyan}
label-focused-foreground = ${colors.background}
label-focused-padding = 1.2

label-unfocused = "%name%"
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.cyan}
label-unfocused-padding = 1.2

label-visible-focused = "%name%"
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.cyan}
label-visible-padding = 1.2

label-urgent-focused = "%name%"
label-urgent-background = ${colors.red}
label-urgent-foreground = ${colors.background}
label-urgent-padding = 1.2

[module/wlan]
type = custom/script
label= %output%
exec=echo "$(iw dev wlp2s0 link | grep SSID | cut -d " " -f 2-)"
;format-background = ${colors.background}
format-foreground = ${colors.red}
interval=5
format-padding = 0.7

[module/bandwidth]
;This was meant for i3blocks too...I love how I don't really have to change anything for it to work here. I did change IN and OUT to those arrows.
type = custom/script
label = %output%
exec=~/.i3/scripts/bandwidth
interval=1
format-foreground = ${colors.red}
;format-foreground = ${colors.background}
format-padding = 1

[module/volume]
type = custom/script
label =  %output%
exec=~/.i3/scripts/volume
format-padding = 1.5
format-foreground = ${colors.red}

[module/weather]
;Display Weather. Change 'arlington' to where you live (unless you live in arlington too...) for it to work
type=custom/script
label=Nashik %output%
exec= ~/.i3/scripts/weather.sh nashik
interval=1800
format-foreground = ${colors.green}
format-padding = 1

[module/battery]
;Display battery percentage. It's a i3blocks module...just so you know...
type = custom/script
label =  %output%
exec=~/.i3/scripts/battery
interval=12
format-foreground = ${colors.red}
format-padding = 1

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-foreground = ${colors.yellow}
format-padding = 1

label = %date% %time%

[module/powermenu]
type = custom/menu

expand-right = true
format-foreground = ${colors.background}
format-padding = 2
format-spacing = 1

label-open = 
;label-open-foreground = #e39866
label-close =  cancel
;label-close-foreground = #e39866
label-separator = |
;label-separator-foreground = #e6a57a

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-2 = log off
menu-0-2-exec = menu-open-3

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = reboot

menu-2-0 = power off
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

menu-3-0 = log off
menu-3-0-exec = pkill -KILL -u $USER
menu-3-1 = cancel
menu-3-1-exec = menu-open-0

